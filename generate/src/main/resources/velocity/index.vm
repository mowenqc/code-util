<!DOCTYPE html>
<html class="x-admin-sm">
<head>
    <meta charset="UTF-8">
    <title>管理界面</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport"
          content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi"/>
    <link rel="stylesheet" href="/css/font.css">
    <link rel="stylesheet" href="/css/xadmin.css">
</head>
<body>
<div class="x-nav">
          <span class="layui-breadcrumb">
            <a href="/">首页</a>
            <a href="javascript:void(0);">演示</a>
            <a>
              <cite>导航元素</cite></a>
          </span>
    <a class="layui-btn layui-btn-small" style="line-height:1.6em;margin-top:3px;float:right"
       onclick="location.reload()" title="刷新">
        <i class="layui-icon layui-icon-refresh" style="line-height:30px"></i></a>
</div>
<div class="layui-fluid">
    <div class="layui-row layui-col-space15">
        <div class="layui-col-md12">
            <div class="layui-card">
                <div class="layui-card-body ">
                    <form class="layui-form layui-col-space5" id="searchForm">
                        #foreach($item in $table.viewTypes)
                            #if($item.field != "id" && $item.field != "createTime" && $item.field != "updateTime")

                                #if($item.type == 5)
                                    <div class="layui-inline layui-show-xs-block">
                                        <select name="$!item.field" lay-verify="required"
                                                class="layui-select $!item.field">
                                            <option value=""></option>
                                            #if($item.selectList)
                                                #foreach($option in $item.selectList)
                                                    <option value="$option.name">$option.value</option>
                                                #end
                                            #end
                                        </select>
                                    </div>
                                #elseif($item.type == 8)
                                    <div class="layui-inline layui-show-xs-block">
                                        <input type="text" name="$!item.field" lay-verify="$!item.field"
                                               placeholder="请输入$!item.name" autocomplete="off"
                                               class="layui-input datetime $!item.field">
                                    </div>
                                #elseif($item.type == 1)
                                    <div class="layui-inline layui-show-xs-block">
                                        <input name="$!item.field" class="layui-input $!item.field" autocomplete="off"
                                               placeholder="请输入$!item.name">
                                    </div>
                                #end

                            #end
                        #end
                        <div class="layui-inline layui-show-xs-block">
                            <button class="layui-btn" type="button" lay-filter="search" id="search"><i
                                    class="layui-icon">&#xe615;</i></button>
                            <button class="layui-btn" type="reset"><i class="layui-icon">reset</i></button>
                        </div>
                    </form>
                </div>
                <div class="layui-card-header" style="text-align: right">
                    <button class="layui-btn" id="addField"><i class="layui-icon"></i>添加</button>
                </div>
                <div class="layui-card-body">
                    <table class="layui-table layui-form" id="layuiTable" lay-filter="layuiTable">

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="layui-layer-dialog" id="openDialog" style="display: none">
    <form class="layui-form layui-form-pane" id="editDialogForm">
        #foreach($item in $table.viewTypes)
            #if($item.field != "id" && $item.field != "createTime" && $item.field != "updateTime")
                <div class="layui-form-item">
                    <label class="layui-form-label">$item.name</label>
                    <div class="layui-input-block">
                        #if($item.type == 5)
                            <select name="$!item.field" lay-verify="required"
                                    class="layui-select $!item.field">
                                <option value=""></option>
                                #if($item.selectList)
                                    #foreach($option in $item.selectList)
                                        <option value="$option.name">$option.value</option>
                                    #end
                                #end
                            </select>
                        #elseif($item.type == 7)
                            <textarea name="$!item.field" placeholder="请输入$!item.name"
                                      class="layui-textarea $!item.field"></textarea>
                        #elseif($item.type == 8)
                            <input type="text" name="$!item.field" lay-verify="$!item.field"
                                   placeholder="$!item.name" autocomplete="off"
                                   class="layui-input datetime $!item.field">
                        #elseif($item.type == 1)
                            <input name="$!item.field" class="layui-input $!item.field" autocomplete="off"
                                   placeholder="请输入$!item.name">
                        #end
                    </div>
                </div>
            #end
        #end
    </form>
</div>
</body>
<script type="text/html" id="toolBar">
    <a class="layui-btn layui-btn-xs edit" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-xs delete" lay-event="delete">删除</a>
</script>
<script type="text/javascript" src="/js/xadmin/jquery.min.js"></script>
<script src="/lib/layui/layui.js" charset="utf-8"></script>
<script type="text/javascript" src="/js/xadmin/xadmin.js"></script>
<!--[if lt IE 9]>
<script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
<script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->
<script>
    layui.config({
        base: '/js/module/'
    })
</script>
<script>
    layui.use(['laydate', 'form', 'jquery', 'layer', "ajax", "table", "global"], function () {
        var laydate = layui.laydate;
        var form = layui.form;
        var layer = layui.layer;
        var ajax = layui.ajax;
        var table = layui.table;
        var $ = layui.jquery;
        var global = layui.global;
        table.render({
            elem: '#layuiTable'
            , url: '/$table.domainObjName/list'
            , cols: [[ //标题栏
                {field: 'id', title: 'ID', width: 80, align: 'center'}
                #foreach($item in $table.viewTypes)
                    #if($item.field != "id" && $item.field != "createTime" && $item.field != "updateTime")
                        , {field: '$item.field', title: '$item.name', align: 'center'}
                    #end
                #end
                , {field: 'createTime', title: '创建时间', align: 'center'}
                , {field: 'updateTime', title: '更新时间', align: 'center'}
                , {title: "操作", fixed: 'right', align: 'center', width: 200, toolbar: '#toolBar'}
            ]]
            , id: "layuiTable"
            , loading: true
            , page: true
            , limit: 10
            , limits: [10, 20, 50, 100, 200]
            , request: {
                pageName: "pageNo"
                , limitName: "pageSize"

            }
            , response: {
                statusName: 'code' //数据状态的字段名称，默认：code
                , statusCode: 200 //成功的状态码，默认：0
                , msgName: 'msg' //状态信息的字段名称，默认：msg
                , countName: 'count' //数据总数的字段名称，默认：count
                , dataName: 'data' //数据列表的字段名称，默认：data
            }
        });
        $("#addField").click(function () {
            $("#editDialogForm").trigger("reset");
            save${table.domainClassName}(false);
        });
        $("#search").click(function () {
            reloadTable();
        });

        function save${table.domainClassName}(isUpdate, id) {
            var title = "新增";
            if (isUpdate) {
                title = "编辑";
            }
            layer.open({
                type: 1,
                title: title,
                area: ['600px', '400px'],
                fix: false, //不固定
                maxmin: true,
                content: $('#openDialog'),
                success: function () {
                    // $('#addGoodsForm').trigger('reset');
                },
                btn: ["保存", "关闭"],
                yes: function (index) {
                    var data = global.form.serializeJSON("#editDialogForm");
                    var load = layer.load();
                    var url = "/${table.domainObjName}/insert";
                    if (isUpdate) {
                        url = "/${table.domainObjName}/update";
                        data.id = id;
                    }

                    ajax.getJSON({
                        url: url,
                        data: data,
                        success: function (resp) {
                            if (100 == resp.c) {
                                reloadTable();
                            } else {
                                layer.alert(resp.m)
                            }
                            layer.closeAll();
                        }

                    });
                },
                btn2: function (index) {
                    layer.close(index);
                }
            });
        }

        function reloadTable() {
            var data = global.form.serializeJSON("#searchForm");
            table.reload('layuiTable', {where: data});
        }

        table.on('tool(layuiTable)', function (obj) { //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值
            var tr = obj.tr; //获得当前行 tr 的DOM对象
            if (layEvent == 'edit') {
                edit(data);
            } else if (layEvent == 'delete') {
                del(data);
            }
        });

        function edit(data) {
            $("#editDialogForm").trigger("reset");
            global.form.serializeByClass("editDialogForm", data);
            save${table.domainClassName}(true, data.id);
            form.render();
        }

        function del(data) {
            layer.confirm("确定要删除【" + data.name + "】吗？", function (index) {
                ajax.getJSON({
                    url: "/${table.domainObjName}/deleteById",
                    data: {"id": data.id},
                    success: function (resp) {
                        if (resp.c == "100") {
                            layer.msg("删除成功!");
                            reloadTable();
                        } else {
                            layer.msg("删除数据失败:" + resp.m);
                        }
                    }
                });
                layer.close(index);
            });
        }

        //执行一个laydate实例
        laydate.render({
            elem: '.datetime' //指定元素
        });
    });
</script>
</html>